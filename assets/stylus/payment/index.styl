.payment
  border 3px solid var(--bg-borderer)
  &__header
    border-bottom 3px solid var(--bg-borderer)
    padding-top var(--indent-xl)
    padding-bottom var(--indent-xl)
    .text
      margin-top 5px
      margin-bottom 12px
  &__footer  
    border-top 3px solid var(--bg-borderer)
    .form__control
      justify-content flex-end
  &__content
    flex-direction column  
    justify-content center
    .form__item
      flex-direction row
      &:last-child
        margin-bottom 0