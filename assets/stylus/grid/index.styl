.grid
  // Modificators
  display flex
  width 100%
  flex-wrap: wrap

  &_m-columns
    &_10
      --m-columns 10%
    &_12  
      --m-columns 8.333333%
  &_col-gap 
    &_two-thirds
      --col-gap calc(var(--gap) * (2 / 3))
      margin 0 calc(var(--col-gap) * -1) 
    &_full
      --col-gap calc(var(--gap) / 2)
      margin 0 calc(0 - (var(--col-gap)))
    &_half
      --col-gap calc(var(--gap) / 2 / 2)
      margin 0 calc(var(--col-gap) * -1)
  &_row-gap
    &_full
      --row-gap 1   
    &_half
      --row-gap 0.5   
  // Elements
  &__fraction
    padding: 0 var(--col-gap)
    margin var(--row-gap) 0
    &_m-col
      &_2
        width calc(2 * var(--m-columns))
      &_3
        width calc(3 * var(--m-columns))
      &_4
        width calc(4 * var(--m-columns))
      &_5
        width calc(5 * var(--m-columns))
      &_8
        width calc(8 * var(--m-columns))
    