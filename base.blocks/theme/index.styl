* {
  box-sizing border-box
}
body 
  margin: 0
  padding: 0
.theme
  &_color
    &_project
      &-default
        
        // Bg color
        --bg-primary #fff
        --bg-accent #ffcc00
        --bg-borderer #000000

        background-color var(--bg-primary)
        // Text color
        --text-color-primary #000000
        --text-color-secondary rgba(0, 0, 0, 0.6)
        --text-color-additional rgba(0, 0, 0, 0.3)
        --text-color-link #0077ff

        --image-stub url('data:image/svg+xml; utf8, <svg width="80" height="64" xmlns="http://www.w3.org/2000/svg"><path d="M32 16h16V8h8v8h8v8h8v8h8v16h-8v-8h-8v8h-8v8h-8v-8H32v8h-8v-8h-8v-8H8v8H0V32h8v-8h8v-8h8V8h8v8zm-8 16h8v-8h-8v8zM16 0h8v8h-8V0zm0 56h8v8h-8v-8zm40-24v-8h-8v8h8zm8-32v8h-8V0h8zm0 56v8h-8v-8h8z" fill="rgb(0,0,0)" fill-rule="nonzero"/></svg>');

        
      &-brand

        // Bg color
        --bg-primary #0077ff
        --bg-accent #FFFFFF
        --bg-borderer #FFFFFF
        background-color var(--bg-primary)
        // Text color
        --text-color-primary #FFFFFF
        --text-color-secondary rgba(255, 255, 255, 0.6)
        --text-color-additiona rgba(255, 255, 255, 0.3)
        --text-color-link #FFFFFF

        --image-stub url('data:image/svg+xml; utf8, <svg width="80" height="64" xmlns="http://www.w3.org/2000/svg"><path d="M32 16h16V8h8v8h8v8h8v8h8v16h-8v-8h-8v8h-8v8h-8v-8H32v8h-8v-8h-8v-8H8v8H0V32h8v-8h8v-8h8V8h8v8zm-8 16h8v-8h-8v8zM16 0h8v8h-8V0zm0 56h8v8h-8v-8zm40-24v-8h-8v8h8zm8-32v8h-8V0h8zm0 56v8h-8v-8h8z" fill="rgb(255,255,255)" fill-rule="nonzero"/></svg>');
        
      &-inverse

        // Bg color
        --bg-primary   #000000
        --bg-accent    #FFFFFF
        --bg-borderer  #FFFFFF
        background-color var(--bg-primary)
        // Text color
        --text-color-primary  #FFFFFF
        --text-color-secondary  rgba(255, 255, 255, 0.6)
        --text-color-additional  rgba(255, 255, 255, 0.3)
        --text-color-link  #0077ff

        --image-stub url('data:image/svg+xml; utf8, <svg width="80" height="64" xmlns="http://www.w3.org/2000/svg"><path d="M32 16h16V8h8v8h8v8h8v8h8v16h-8v-8h-8v8h-8v8h-8v-8H32v8h-8v-8h-8v-8H8v8H0V32h8v-8h8v-8h8V8h8v8zm-8 16h8v-8h-8v8zM16 0h8v8h-8V0zm0 56h8v8h-8v-8zm40-24v-8h-8v8h8zm8-32v8h-8V0h8zm0 56v8h-8v-8h8z" fill="rgb(255,255,255)" fill-rule="nonzero"/></svg>');
      &-warning

        // Bg color
        --bg-primary   #ff3333
        --bg-accent    #FFFFFF
        --bg-borderer  #ff3333
        background-color var(--bg-primary)
        // Text color
        --text-color-primary  #FFFFFF
        --text-color-secondary  rgba(255, 255, 255, 0.6)
        --text-color-additional  rgba(255, 255, 255, 0.3)
        --text-color-link  #FFFFFF

  &_size
    &_default

      --font-size-s     8px
      --font-size-m     10px
      --font-size-l     11px
      --font-size-xl    13px
      --font-size-xxl   16px

      --line-height-s   21px
      --line-height-m   25px
      --line-height-l   28px
      --line-height-xl  34px
      --line-height-xxl  38px

  &_space
    &_default

      --indent-xxxs    3px
      --indent-xxs     5px
      --indent-xs      9px
      --indent-s       15px
      --indent-m       18px
      --indent-l       24px
      --indent-xl      27px
      --indent-xxl     36px
      --indent-xxxl    45px
      --indent-xxxxl   51px
      --indent-xxxxxl  72px
  &_gap
    &_small
      --gap var(--indent-xl)

@media (max-width 1024px)
  .theme
    display flex
    flex-direction column
    &_gap
      &_small
        --gap var(--indent-s)