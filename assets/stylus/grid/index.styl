.grid
  // Modificators
  display grid
  grid-template-columns: repeat(var(--m-columns), calc(100% / var(--m-columns)))
  width 100%
  flex-wrap: wrap

  &_m-columns
    &_10
      --m-columns 10
    &_12  
      --m-columns 12
  &_col-gap 
    &_two-thirds
      --col-gap calc(var(--gap) * (2 / 3))
      margin 0 calc(var(--col-gap) * -1) 
    &_full
      --col-gap calc(var(--gap) / 2)
      margin 0 calc(0 - (var(--col-gap)))
    &_half
      --col-gap calc(var(--gap) / 2 / 2)
      margin 0 calc(var(--col-gap) * -1)
  &_row-gap
    &_full
      --row-gap 1   
    &_half
      --row-gap 0.5   
  // Elements
  &__fraction
    padding: 0 var(--col-gap)
    margin var(--row-gap) 0
    &_m-col
      &_2
        grid-column: span 2
      &_3
        grid-column: span 3
      &_4
        grid-column: span 4
      &_5
        grid-column: span 5
      &_8
        grid-column: span 8
    