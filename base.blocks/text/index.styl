.text
  display flex
  flex-flow wrap
  &_align
    &_center
      justify-content center
  &_size
    &_s
      --text-width-s 20px
      --text-width-m 48px
      --text-width-l 100px
      --text-height-default 8px
      .text__word
        margin-top: 8px
        margin-bottom 5px
    &_m
      --text-width-s 24px
      --text-width-m 56px
      --text-width-l 114px
      --text-height-default 10px
      .text__word
        margin-top 8px
        margin-bottom: 7px
    &_l
      --text-width-s 28px
      --text-width-m 68px
      --text-width-l 138px
      --text-height-default 11px
      .text__word
        margin-top 8px
        margin-bottom 9px
    &_xl
      --text-width-s 32px
      --text-width-m 74px
      --text-width-l 154px  
      --text-height-default 13px
      .text__word
        margin-top 9px
        margin-bottom 12px
    &_xxl
      --text-width-s 36px
      --text-width-m 88px
      --text-width-l 184px   
      --text-height-default 16px
      .text__word
        margin-top 8px
        margin-bottom 14px
  &_type
    &_h1
      margin 18px 0 24px !important   
    &_h2
      margin 45px 0 21px !important    
    &_h3
      margin 42px 0 0 !important   
    &_p
      margin 15px 0 21px !important
  &_view
    &_primary
      --text-color var(--text-color-primary)    
      
    &_secondary
      --text-color var(--text-color-secondary)    
    &_ghost
      --text-color var(--text-color-additional)    
    &_link
      --text-color var(--text-color-link)    
  &__word
    background-color var(--text-color)
    &_width
      &_s
        width var(--text-width-s)
        height var(--text-height-default)
      &_m
        width var(--text-width-m)
        height var(--text-height-default)
      &_l
        width var(--text-width-l)
        height var(--text-height-default)
